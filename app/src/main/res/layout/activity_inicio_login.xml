<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inicioLogin"
    android:orientation="vertical"
    android:background="@drawable/morado_degragado">

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/tofilogotipo" />

    <EditText
        android:drawableStart="@drawable/email"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:hint="Usuario"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:background="@drawable/edit_text_custom"/>
    <EditText
        android:drawableStart="@drawable/llave"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:hint="Constraseña"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/edit_text_custom"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Olvidaste tu contraseña?"
        android:textSize="15dp"
        android:layout_gravity="right"
        android:layout_marginEnd="80dp"
        android:textColor="@color/Amarillo_Claro"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recordar Usuario"
        android:textColor="@color/Morado_Claro"
        android:checked="true"
        android:layout_gravity="right"
        android:layout_marginEnd="80dp"/>
    <Button
        android:id="@+id/btniniciarsesion"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Verde_Pastel"
        android:text="Iniciar Sesion"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/btnregistrar"
        android:layout_marginTop="5dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Morado"
        android:text="Registrarse"
        android:layout_gravity="center"/>

</LinearLayout>